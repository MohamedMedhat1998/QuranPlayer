<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suras_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange_50"
    android:orientation="vertical"
    tools:context=".SurasListActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/sura_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    tools:text="Sheekh Name"
                    android:id="@+id/tv_toolbar_sheekh_name"
                    style="@style/SheekhNameStyle"
                    android:textColor="@color/Black"
                    android:transitionName="@string/toolbar_title_transition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    tools:text="Rewaya"
                    android:id="@+id/tv_toolbar_rewaya"
                    android:transitionName="@string/toolbar_subtitle_transition"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:id="@+id/fragment_container_suars_list_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>