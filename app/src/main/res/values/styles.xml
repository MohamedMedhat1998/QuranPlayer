<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Indigo_800</item>
        <item name="colorPrimaryDark">@color/Indigo_900</item>
        <item name="colorAccent">@color/Blue_A400</item>
    </style>

    <style name="LanguageRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="LanguageNextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttons</item>
        <item name="android:background">@drawable/rounded_edge_button</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
